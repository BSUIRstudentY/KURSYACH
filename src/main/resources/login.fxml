<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.LoginController"
      alignment="CENTER" spacing="10" style="-fx-background-color: #f4f4f4;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="Login to Stock Trading System" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
    <Label fx:id="errorLabel" text="" style="-fx-text-fill: red;"/>
    <Label text="Email"/>
    <TextField fx:id="emailField" promptText="Enter your email"/>
    <Label text="Password"/>
    <PasswordField fx:id="passwordField" promptText="Enter your password"/>
    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
    <Button fx:id="registerButton" text="Register" onAction="#goToRegister" style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
</VBox>